<%= form.for(@post) do |f| %>
    <div class="form-group">
        <%= f.label 'Update status' %><br>
        <%= f.text_area :content, class: 'form-control', autofocus: true, placeholder: 'What\'s up?' %>
        <%= f.text_field :attachment, class: 'form-control' %>
    </div>
    <%= f.submit :post, class: 'btn btn-primary' %>
<% end %>