<% if current_user.liked? likeable %>
    <%= form_tag unlike_path(likeable_type: likeable.class.to_s, likeable_id: likeable_id) %>
        <% button_tag class: 'btn btn-block liked' do %>
            <%= fa_icon 'thumbs-up '%> unlike
        <% end %>
    <% end %>
<% else %>
    <%= form_tag ulike_path(likeable_type: likeable.class.to_s, likeable_id: likeable_id) %>
        <% button_tag class: 'btn btn-block' do %>
            <%= fa_icon 'thumbs-up '%> like
        <% end %>
    <% end %>
<% end %>